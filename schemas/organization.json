{
    "$schema": "http://json-schema.org/schema#",
    "id": "uri://registries/organization#",
    "table": "organizations",
    "_security": {
        "_create": {
            "_static": [
                "Registry - write"
            ]
        },
        "_read": {
            "_static": [
                "Registry - read"
            ]
        },
        "_modify": {
            "_static": [
                "Registry - write"
            ]
        }
    },
    "title": "Organizacie",
    "listFields": [
        {
            "field": "id",
            "title": "ID"
        },
        {
            "field": "baseData.name",
            "title": "Meno"
        }
    ],
    "properties": {
        "baseData": {
            "title": "Základné údaje",
            "transCode": "schema.org.baseData",
            "type": "object",
            "properties": {
                "name": {
                    "title": "Obchodný názov spoločnosti",
                    "transCode": "schema.org.name",
                    "type": "string",
                    "required": true,
                    "$collate":true
                },
                "stateOfOrganization": {
                    "title": "Stav organizacie",
                    "transCode": "schema.org.stateOfOrganization",
                    "type": "string",
                    "required": true
                }
            }
        },
        "club": {
            "title": "Základné údaje",
            "transCode": "schema.club.baseData",
            "type": "object",
            "properties": {
                "codeOfClub": {
                    "title": "Kód klubu",
                    "transCode": "schema.club.baseData.codeOfClub",
                    "type": "string",
                    "required": false,
                    "$sequence": "clubs"
                },
                "name": {
                    "title": "Názov klubu",
                    "transCode": "schema.club.baseData.name",
                    "type": "string",
                    "required": false,
                    "$collate":true
                },
                "association": {
                    "title": "Zväz",
                    "transCode": "schema.club.baseData.association",
                    "required": false,
                    "$objectLink": {
                        "registry": "organizations",
						"name": "association.associationName"
                    }
                },
                "ico": {
                    "title": "IČO",
                    "transCode": "schema.org.ico",
                    "type": "string",
                    "required": false
                },
                "startDate": {
                    "title": "Dátum založenia",
                    "transCode": "schema.club.baseData.startDate",
                    "type": "string",
                    "required": false,
                    "render": {
                        "component": "psui-datepicker"
                    }
                },
                "stadium": {
                    "title": "Štadión",
                    "transCode": "schema.club.baseData.stadium",
                    "required": false,
                    "$objectLink": {
						"registry": "stadiums",
                        "name": "baseData.name"
                    }
                },
                "stateOfClub": {
                    "title": "Stav klubu",
                    "transCode": "schema.club.baseData.stateOfClub",
                    "type": "string",
                    "enum": [
                        "aktívny",
                        "neaktívny"
                    ],
					"enumTransCodes":[
						"schema.club.state.active",
						"schema.club.state.inactive"
					],
                    "required": false,
                    "render": {
                        "component": "psui-selectbox",
                        "searchable": true
                    }
                },
                "notPaying": {
                    "title": "Neplatič",
                    "transCode": "schema.club.baseData.notPaying",
                    "type": "string",
                    "enum": [
                        "Áno",
                        "Nie"
                    ],
					"enumTransCodes":[
						"schema.club.notPaying.yes",
						"schema.club.notPaying.no"
					],
                    "required": false,
                    "render": {
                        "component": "psui-selectbox",
                        "searchable": true
                    }
                },
                "dateOfRegistration": {
                    "title": "Dátum registrácie",
                    "transCode": "schema.club.baseData.dateOfRegistration",
                    "type": "string",
                    "required": false,
                    "render": {
                        "component": "psui-datepicker"
                    }
                }
            }
        },
        "clubAdress": {
            "title": "Klub - poštová adresa",
            "transCode": "schema.club.clubAdress",
            "type": "object",
            "properties": {
                "contactPerson": {
                    "title": "Kontaktná osoba",
                    "transCode": "schema.club.clubAdress.contactPerson",
                    "type": "string",
                    "required": false
                },
                "mobileNumberOfContactPerson": {
                    "title": "Telefónne číslo kontaktnej osoby",
                    "transCode": "schema.club.clubAdress.mobileNumberOfContactPerson",
                    "type": "string",
                    "required": false
                },
                "street": {
                    "title": "Ulica",
                    "transCode": "schema.club.clubAdress.street",
                    "type": "string",
                    "required": false
                },
                "houseNumber": {
                    "title": "Číslo domu",
                    "transCode": "schema.club.clubAdress.houseNumber",
                    "type": "string",
                    "required": false
                },
                "city": {
                    "$ref": "uri://registries/towns#town"
                },
                "zipCode": {
                    "title": "PSČ",
                    "transCode": "schema.club.clubAdress.zipCode",
                    "type": "string",
                    "required": false
                },
                "region": {
                    "title": "Kraj",
                    "transCode": "schema.club.clubAdress.region",
                    "type": "string",
                    "required": false
                },
                "country": {
                    "$ref": "uri://registries/countries#country"
                }
            }
        },
        "association": {
            "title": "Základné údaje",
            "transCode": "schema.association.baseData",
            "type": "object",
            "properties": {
                "associationName": {
                    "title": "Názov zväzu",
                    "transCode": "schema.association.baseData.associationName",
                    "type": "string",
                    "required": false
                },
                "shortName": {
                    "title": "Skrátený názov zväzu",
                    "transCode": "schema.association.baseData.shortName",
                    "type": "string",
                    "required": false
                },
                "higherAssociation": {
                    "title": "Nadradený zväz",
                    "transCode": "schema.association.baseData.higherAssociation",
                    "required": false,
                    "$objectLink": {
                        "registry": "organizations",
                        "name": "association.associationName"
                    }
                },
                "startDate": {
                    "title": "Dátum založenia",
                    "transCode": "schema.association.baseData.startDate",
                    "type": "string",
                    "required": false,
                    "render": {
                        "component": "psui-datepicker"
                    }
                },
                "stateOfAssociation": {
                    "title": "Stav zväzu",
                    "transCode": "schema.association.baseData.stateOfAssociation",
                    "type": "string",
                    "enum": [
                        "aktívny",
                        "neaktívny"
                    ],
					"enumTransCodes":[
						"schema.association.state.active",
						"schema.association.state.inactive"
					],
                    "required": false,
                    "render": {
                        "component": "psui-selectbox",
                        "searchable": true
                    }
                },
                "notPaying": {
                    "title": "Neplatič",
                    "transCode": "schema.association.baseData.notPaying",
                    "type": "string",
                    "enum": [
                        "Áno",
                        "Nie"
                    ],
					"enumTransCodes":[
						"schema.association.notPaying.yes",
						"schema.association.notPaying.no"
					],
                    "required": true,
                    "render": {
                        "component": "psui-selectbox",
                        "searchable": true
                    }
                },
                "dateOfRegistration": {
                    "title": "Dátum registrácie",
                    "transCode": "schema.association.baseData.dateOfRegistration",
                    "type": "string",
                    "required": false,
                    "render": {
                        "component": "psui-datepicker"
                    }
                }
            }
        },
        "associationAdress": {
            "title": "Zväz - poštová adresa",
            "transCode": "schema.associationAdress",
            "type": "object",
            "properties": {
                "contactPerson": {
                    "title": "Kontaktná osoba",
                    "transCode": "schema.associationAdress.contactPerson",
                    "type": "string",
                    "required": false
                },
                "mobileNumberOfContactPerson": {
                    "title": "Telefónne číslo kontaktnej osoby",
                    "transCode": "schema.associationAdress.mobileNumberOfContactPerson",
                    "type": "string",
                    "required": false
                },
                "street": {
                    "title": "Ulica",
                    "transCode": "schema.associationAdress.street",
                    "type": "string",
                    "required": false
                },
                "houseNumber": {
                    "title": "Číslo domu",
                    "transCode": "schema.associationAdress.houseNumber",
                    "type": "string",
                    "required": false
                },
                "city": {
                    "$ref": "uri://registries/towns#town"
                },
                "zipCode": {
                    "title": "PSČ",
                    "transCode": "schema.associationAdress.zipCode",
                    "type": "string",
                    "required": false
                },
                "country": {
                    "$ref": "uri://registries/countries#country"
                }
            }
        },
        "logoInfo": {
            "title": "Logo",
            "transCode": "schema.org.logoInfo",
            "type": "object",
            "properties": {
                "photo": {
                    "title": "Logo",
                    "transCode": "schema.org.logo",
                    "type": "string",
                    "required": false,
                    "render": {
                        "component": "psui-uploadable-image",
                        "height": 230,
                        "width": 230
                    }
                }
            }
        },
        "contactInfo": {
            "title": "Kontaktné údaje",
            "transCode": "schema.org.contactInfo",
            "type": "object",
            "properties": {
                "street": {
                    "title": "Ulica",
                    "transCode": "schema.org.street",
                    "type": "string",
                    "required": false
                },
                "houseNumber": {
                    "title": "Číslo domu",
                    "transCode": "schema.org.houseNumber",
                    "type": "string",
                    "required": false
                },
                "city": {
                    "$ref": "uri://registries/towns#town"
                },
                "zipCode": {
                    "title": "PSČ",
                    "transCode": "schema.org.zipCode",
                    "type": "string",
                    "required": false
                },
                "country": {
                    "$ref": "uri://registries/countries#country"
                },
                "phoneNumber": {
                    "title": "Telefón",
                    "transCode": "schema.org.phoneNumber",
                    "type": "string",
                    "required": false
                },
                "mobileNumber": {
                    "title": "Mobil",
                    "transCode": "schema.org.mobileNumber",
                    "type": "string",
                    "required": false
                },
                "email": {
                    "title": "E-mail",
                    "transCode": "schema.org.email",
                    "type": "string",
                    "required": false
                },
                "fax": {
                    "title": "FAX",
                    "xxtransCode": "schema.org.email",
                    "type": "string",
                    "required": false
                },
                "webPage": {
                    "title": "Webová stránka",
                    "xxtransCode": "schema.org.email",
                    "type": "string",
                    "required": false
                }
            }
        },
        "bankInfo": {
            "title": "Fakturačné údaje",
            "transCode": "schema.org.bankInfo",
            "type": "object",
            "properties": {
                "statutarOrgan": {
                    "title": "Štatutárny orgán",
                    "transCode": "schema.org.statutarOrgan",
                    "type": "string",
                    "required": false
                },
                "ico": {
                    "title": "IČO",
                    "transCode": "schema.org.ico",
                    "type": "string",
                    "required": true
                },
                "dic": {
                    "title": "DIČ",
                    "transCode": "schema.org.dic",
                    "type": "string",
                    "required": false
                },
                "countryIcDPH": {
                    "title": "krajina IČ DPH",
                    "transCode": "schema.org.country.icDPH",
                    "type": "string",
                    "required": false
                },
                "icDPH": {
                    "title": "IČ DPH",
                    "transCode": "schema.org.icDPH",
                    "type": "string",
                    "required": false
                },
                "bankAccount": {
                    "title": "Číslo účtu",
                    "transCode": "schema.org.bankAccount",
                    "type": "string",
                    "required": false
                },
                "bankCode": {
                    "title": "Kód banky",
                    "transCode": "schema.org.bankCode",
                    "type": "string",
                    "required": false
                },
                "bank": {
                    "title": "Názov banky",
                    "transCode": "schema.org.bank",
                    "type": "string",
                    "required": false
                },
                "iban": {
                    "title": "IBAN",
                    "transCode": "schema.org.iban",
                    "type": "string",
                    "required": false
                },
                "swift": {
                    "title": "SWIFT",
                    "transCode": "schema.org.swift",
                    "type": "string",
                    "required": false
                },
                "street": {
                    "title": "Ulica",
                    "transCode": "schema.org.street",
                    "type": "string",
                    "required": true
                },
                "houseNumber": {
                    "title": "Číslo domu",
                    "transCode": "schema.org.houseNumber",
                    "type": "string",
                    "required": true
                },
                "city": {
                    "$ref": "uri://registries/towns_required#town"
                },
                "zipCode": {
                    "title": "PSČ",
                    "transCode": "schema.org.zipCode",
                    "type": "string",
                    "required": true
                },
                "country": {
                    "$ref": "uri://registries/countries#country"
                }
            }
        }
    }
}
